@{
    @model COMP367group6.Models.Video
}
<div class="text-center">
    <h1 class="display-4">Upload a Video</h1>
    <br />
    <form asp-action="Video" method="post">
        <div>
            <label>Title:</label>
             <input asp-for="Title" />
        </div>
        <br />
        <div>
            <label>Thumbnail:</label>
            <input asp-for="Thumbnail" type="file" onchange="fileCheck(this)" />
        </div>
        <br />
        <div>
            <label>Video Url:</label>
            <input asp-for="Url" />
        </div>
        <br />
        <div>
            <button type="submit">Upload Video</button>
        </div>
    </form>
</div>